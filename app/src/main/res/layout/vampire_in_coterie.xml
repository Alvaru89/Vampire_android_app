<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <Button
        android:id="@+id/add_inf"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:text="INCREASE INF"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="240dp"
        android:backgroundTint="@android:color/holo_green_dark"/>

    <TextView
        android:id="@+id/vampire_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TBD"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="166dp"
        android:textColor="@android:color/holo_red_dark"/>

    <Button
        android:id="@+id/Damage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Damage"
        app:layout_constraintEnd_toStartOf="@+id/Mend"
        tools:layout_editor_absoluteY="192dp"
        android:backgroundTint="@android:color/holo_red_dark"/>

    <Button
        android:id="@+id/spend_inf"
        android:layout_width="114dp"
        android:layout_height="43dp"
        android:text="SPEND INF"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="239dp"
        android:backgroundTint="@android:color/holo_green_dark"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/blood"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/blood_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TBD/TBD"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="208dp"
        android:textColor="@android:color/holo_red_dark"/>

    <TextView
        android:id="@+id/inf_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="246dp" />

    <Button
        android:id="@+id/Mend"
        android:layout_width="80dp"
        android:layout_height="47dp"
        android:text="Mend"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="192dp"
        android:backgroundTint="@android:color/holo_red_dark"/>

    <TextView
        android:id="@+id/torpor_dead"
        android:layout_width="120dp"
        android:layout_height="22dp"
        android:text="TBD"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
        android:id="@+id/leader"
        android:layout_width="30dp"
        android:layout_height="17dp"
        android:text="TBD"
        android:textColor="@android:color/holo_orange_light"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="166dp" />

    <Button
        android:id="@+id/other"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:text="..."
        app:layout_constraintStart_toEndOf="@+id/Mend"
        tools:layout_editor_absoluteY="193dp"
        android:backgroundTint="@android:color/holo_purple"/>

    <TextView
        android:id="@+id/influence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Influence"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="246dp"
        android:textColor="@android:color/holo_green_dark"/>
</androidx.constraintlayout.widget.ConstraintLayout>